<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.view.MediaFragment">

    <ImageView
        android:id="@+id/iv_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_downloading_24"/>

    <TextView
        android:id="@+id/tv_media_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_media"
        tools:text="미디어 제목"/>

    <TextView
        android:id="@+id/tv_media_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_media_title"
        tools:text="미디어 날짜"/>

    <TextView
        android:id="@+id/tv_media_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/tv_media_date"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="미디어 정보"/>

</androidx.constraintlayout.widget.ConstraintLayout>